<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.metodista.hotelapp" >


    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Linha para alteracao do icone do app -->

        <activity
            android:name=".activities.Login"
            android:label="@string/title_activity_login" >
            android:parentActivityName=".activities.Abertura"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.Abertura" />
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/title_activity_home">
        </activity>
        <activity
            android:name=".activities.Abertura"
            android:label="@string/title_activity_abertura" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ReservarQuarto"
            android:label="@string/title_activity_reservar_quarto" >
            android:parentActivityName=".activities.Abertura" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.Abertura" />
        </activity>
        <activity
            android:name=".activities.Contato"
            android:label="@string/title_activity_contato" >
        </activity>
    </application>

</manifest>
