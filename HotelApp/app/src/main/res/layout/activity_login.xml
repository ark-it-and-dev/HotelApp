<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.metodista.hotel.Login"
    android:orientation="vertical"
    android:background="@drawable/hotel_background"
    android:gravity="center">

    <TextView
        android:text="@string/Login_txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_icone_usuario"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login_txtSenha"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:drawableLeft="@drawable/login_icone_senha"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/Login_btnEntrar"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_background"/>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/Login_btnVoltar"
        android:background="@drawable/botao_background"
        android:layout_marginTop="10dp"/>

</LinearLayout>
