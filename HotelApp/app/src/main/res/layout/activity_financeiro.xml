<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.metodista.hotelapp.activities.Servicos"
    android:orientation="vertical"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/financeiroCabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/financeiroTextoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/financeiro_texto_valor_total"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/financeiroValorTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/financeiroTextoTotal"
            android:gravity="right"/>

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expListFinanceiro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"/>

</LinearLayout>