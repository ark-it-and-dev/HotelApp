<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hotel_background"
    tools:context="br.metodista.hotelapp.activities.Abertura"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:id="@+id/btnRealizarReserva"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/Abertura_btnReservar"
        android:textSize="@dimen/abertura_login_tamanho_texto_botao"
        android:layout_marginTop="200dp"
        android:background="@drawable/botao_background"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/Abertura_btnLogin"
        android:textSize="@dimen/abertura_login_tamanho_texto_botao"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_background"/>

</LinearLayout>
