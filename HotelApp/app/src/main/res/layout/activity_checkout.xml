<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.metodista.hotelapp.StandBy.Home_Sobre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/financeiro_cabecalho"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_texto_valor_total"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 1.030,00"
                android:layout_marginLeft="203dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/financeiro_texto_observacao_valor_total"
            android:textColor="@android:color/holo_orange_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/financeiro_titulo_estadia"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="30dp"/>

        <GridLayout
            android:id="@+id/financeiroGridEstadia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_responsavel"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_nome_responsavel"
                android:layout_marginLeft="155dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_qtdpessoas"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_pessoas"
                android:layout_marginLeft="88dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_pacote"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_nomepacote"
                android:layout_marginLeft="195dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_valor_diaria"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_diaria"
                android:layout_marginLeft="163dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_periodo_contratado"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_estadia_tempo_periodo_contratado"
                android:layout_marginLeft="125dp"/>

        </GridLayout>

        <TextView
            android:text="______________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/financeiro_titulo_servico_de_quarto"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="10dp"/>

        <GridLayout
            android:id="@+id/financeiroGridServicoQuarto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_titulo_pedido1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_preco_pedido1"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_titulo_pedido2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_preco_pedido2"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_titulo_pedido3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_preco_pedido3"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_titulo_pedido4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_preco_pedido4"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_titulo_pedido5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_servicoquarto_preco_pedido5"
                android:layout_marginLeft="16dp"/>

        </GridLayout>

        <TextView
            android:text="______________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/financeiro_titulo_demais"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="10dp"/>

        <GridLayout
            android:id="@+id/financeiroDemaisServicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_demais_titulo_gasto1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_demais_preco_gasto1"
                android:layout_marginLeft="166dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_demais_titulo_gasto2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/financeiro_demais_preco_gasto2"
                android:layout_marginLeft="174dp"/>

        </GridLayout>

        <Button
            android:id="@+id/btnFinalizarCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/botao_background"
            android:text="@string/checkout_texto_finalizar_checkout"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>